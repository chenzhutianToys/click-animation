{
    
    "parser": "babel-eslint",
    "env": {
        "node": true,
        "browser": true,
        "shared-node-browser":true,
        "es6":true,
        "commonjs": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
                2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}